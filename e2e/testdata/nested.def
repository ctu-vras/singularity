Bootstrap: docker
From: ubuntu:25.04

%files
    ./   /singularity-src/

%post
    export DEBIAN_FRONTEND=noninteractive

    apt-get -q update && apt-get -q install -y autoconf \
        automake \
        crun \
        cryptsetup \
        fuse2fs \
        fuse3 \
        fuse-overlayfs \
        git \
        libfuse3-dev \
        libglib2.0-dev \
        libseccomp-dev \
        libsubid-dev \
        libtool \
        make \
        pkg-config \
        squashfs-tools \
        squashfs-tools-ng \
        tzdata \
        uidmap \
        wget
  
    wget -O /tmp/go.tar.gz https://go.dev/dl/{{ GOVERSION }}.{{ GOOS }}-{{ GOARCH }}.tar.gz && tar -C /usr/local -xzf /tmp/go.tar.gz
    export PATH="/usr/local/go/bin:$PATH"

    cd /singularity-src
    git clean -fdx || true
    ./mconfig 
    make -C builddir && make -C builddir install
    cd ../
    rm -rf /singularity-src

%runscript
    /usr/local/bin/singularity "$@"
